    <script>
    // Function to send a request to the backend when the AI Bot section is clicked
    function openCmd() {
        fetch('/open-cmd', {
            method: 'GET'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Command prompt opened successfully!');
            } else {
                alert('Failed to open the command prompt.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }
</script>

